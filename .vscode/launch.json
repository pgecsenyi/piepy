{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceRoot}/src/main.py",
            "pythonPath": "${config:python.pythonPath}",
            "cwd": "${workspaceRoot}/src",
            "args": [
                "--config=../data/config.cfg"
			],
            "debugOptions": [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput"
            ]
        }
    ]
}
